<a class="card" href="<%= idea_path(idea) %>">
    <h3 class="text-2xl"><%= idea.title %></h3>
    <p class="mt-2"><%= idea.description %></p>
    <p class="mt-4 flex items-center">
        <img src="//placehold.it/40x40" class="rounded-full mr-2" />Josh Mobley
    </p>
    <div class="border-t border-solid border-grey pt-4 mt-auto">
        <div class="vote-count"><%= idea.votes.length %></div>
    </div>

</a>