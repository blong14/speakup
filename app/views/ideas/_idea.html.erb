<a class="card" href="<%= idea_path(idea) %>">

    <div class="px-4">
        <h3 class="text-2xl"><%= idea.title %></h3>
        <p class="mt-2 mb-8"><%= idea.description.truncate(180, separator: ' ') %></p>
    </div>

    <div class="border-t border-solid flex border-grey pt-4 px-4 mt-auto">
        <div class="vote-count flex items-center">
            <i class="material-icons mr-2 text-grey-dark">thumb_up</i>
            <%= idea.votes.length %>
        </div>
        <img src="//placehold.it/40x40" class="rounded-full ml-auto h-8 w-8" />
    </div>

</a>